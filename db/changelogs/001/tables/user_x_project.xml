<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

<changeSet id="1" author="kiwi">
	<createTable tableName="user_x_project">
		<column name="id" type="java.sql.Types.BIGINT" autoIncrement="true">
			<constraints primaryKey="true"/>
		</column>
		<column name="user_id" type="java.sql.Types.BIGINT">
			<constraints nullable="false"/>
		</column>
		<column name="project_id" type="java.sql.Types.BIGINT">
			<constraints nullable="false"/>
		</column>
		<column name="access_level" type="java.sql.Types.VARCHAR(6)" remarks="may be READ, UPDATE or MANAGE">
			<constraints nullable="false"/>
		</column>
	</createTable>
</changeSet>

</databaseChangeLog>