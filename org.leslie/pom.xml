<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.eclipse.scout</groupId>
    <artifactId>maven_rt_plugin_config-master</artifactId>
    <version>2.0.6</version>
    <relativePath></relativePath>
  </parent>

  <groupId>leslie</groupId>
  <artifactId>org.leslie</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Leslie Parent Module</name>

  <properties>
    <leslie.org.leslie.version>${project.version}</leslie.org.leslie.version>
    <jdk.source.version>1.8</jdk.source.version>
    <org.eclipse.scout.rt.version>6.0.0.RC4</org.eclipse.scout.rt.version>
  </properties>

  <modules>
    <module>../org.leslie.shared</module>
    <module>../org.leslie.server</module>
    <module>../org.leslie.client</module>
    <module>../org.leslie.server.app.war</module>
    <module>../org.leslie.ui.html</module>
    <module>../org.leslie.ui.html.app.war</module>
  </modules>

  <dependencyManagement>
    <dependencies>
      <!-- Scout Dependencies -->
      <dependency>
        <groupId>org.eclipse.scout.rt</groupId>
        <artifactId>org.eclipse.scout.rt</artifactId>
        <version>${org.eclipse.scout.rt.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

      <!-- Application Dependencies -->
      <dependency>
        <groupId>leslie</groupId>
        <artifactId>org.leslie.client</artifactId>
        <version>${leslie.org.leslie.version}</version>
      </dependency>
      <dependency>
        <groupId>leslie</groupId>
        <artifactId>org.leslie.shared</artifactId>
        <version>${leslie.org.leslie.version}</version>
      </dependency>
      <dependency>
        <groupId>leslie</groupId>
        <artifactId>org.leslie.server</artifactId>
        <version>${leslie.org.leslie.version}</version>
      </dependency>
      <dependency>
        <groupId>leslie</groupId>
        <artifactId>org.leslie.ui.html</artifactId>
        <version>${leslie.org.leslie.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
</project>
