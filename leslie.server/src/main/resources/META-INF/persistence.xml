<?xml version="1.0" encoding="UTF-8" ?>
<persistence 
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">
	
	<persistence-unit name="leslie" transaction-type="RESOURCE_LOCAL">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>org.leslie.server.jpa.entity.Activity</class>
		<class>org.leslie.server.jpa.entity.ParticipationValueConverter</class>
		<class>org.leslie.server.jpa.entity.Project</class>
		<class>org.leslie.server.jpa.entity.ProjectActivity</class>
		<class>org.leslie.server.jpa.entity.ProjectAssignment</class>
		<class>org.leslie.server.jpa.entity.ProjectAssignmentId</class>
		<class>org.leslie.server.jpa.entity.Role</class>
		<class>org.leslie.server.jpa.entity.RolePermission</class>
		<class>org.leslie.server.jpa.entity.User</class>
		<class>org.leslie.server.jpa.entity.VacationActivity</class>
		<class>org.leslie.server.jpa.entity.Skill</class>
		<class>org.leslie.server.jpa.entity.SkillCategory</class>
		<class>org.leslie.server.jpa.entity.SkillAssessment</class>
		<class>org.leslie.server.jpa.entity.SkillAssessmentId</class>
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/leslie" />
			<property name="javax.persistence.jdbc.user" value="leslie" />
			<property name="javax.persistence.jdbc.password" value="leslie" />
			
			<property name="eclipselink.logging.logger" value="JavaLogger"/>
			<property name="eclipselink.logging.level" value="FINE"/>
			<property name="eclipselink.logging.level.sql" value="FINE"/>
			<property name="eclipselink.logging.parameters" value="true"/>
			<property name="eclipselink.logging.timestamp" value="true"/>
			<property name="eclipselink.logging.session" value="true"/>
			<property name="eclipselink.logging.exceptions" value="true"/>
<!-- 			<property name="eclipselink.ddl-generation" value="drop-and-create-tables"/> -->

			<!-- Enables SQL query logging -->
			<property name="openjpa.Log" value="SQL=Trace" />
			<property name="openjpa.ConnectionFactoryProperties" value="PrintParameters=true" />
		</properties>
	</persistence-unit>
</persistence> 